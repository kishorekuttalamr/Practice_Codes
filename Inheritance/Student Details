#include <iostream>
using namespace std;
class Student
{
public:
    string name;
    int roll;
    float mark;
    void studentdetails()
    {
        cout << "enter the name" << endl;
        cin >> name;
        cout << "enter the roll" << endl;
        cin >> roll;
        cout << "enter the mark" << endl;
        cin >> mark;
        display();
    }
    void display()
    {

        cout << "name is " << name << endl;
        cout << "rollnumber is " << roll << endl;
        cout << "mark is " << mark << endl;
    }
};
int main()
{
    Student s;
    s.studentdetails();
}
